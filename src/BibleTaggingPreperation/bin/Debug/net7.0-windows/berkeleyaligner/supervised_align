#!/bin/sh

if [ "$#" != 3 ]
	then
  		echo "Usage: $0 <HMM config> <ITG train config> <ITG align config> "
  		exit 1
fi

OPTS="-server -mx1000m"
HMMCONF=$1
TRAINCONF=$2
ALIGNCONF=$3
shift

echo "java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.Main ++$HMMCONF"
java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.Main ++$HMMCONF

echo "java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.symmetric.itg.ITGMain ++$TRAINCONF"
java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.symmetric.itg.ITGMain ++$TRAINCONF

echo "java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.symmetric.itg.ITGMain ++$ALIGNCONF"
java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.symmetric.itg.ITGMain ++$ALIGNCONF
