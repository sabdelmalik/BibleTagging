#!/bin/sh

if [ $# -lt 1 ] 	
	then
  		echo "Usage: $0 <configuration file> [aligner options...]"
  		exit 1
fi

OPTS="-server -mx1000m"
CONF=$1
shift

echo "java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.Main ++$CONF"
java $OPTS -cp berkeleyaligner.jar edu.berkeley.nlp.wordAlignment.Main ++$CONF
